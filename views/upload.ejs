<%- include ("layouts/header") %>
<div class="container">
    <div class="row my-4">
        <div class="col-md-12">
            <h1>Upload Video</h1>
     


            <form action="/upload-video" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Select Video</label>
                    <input type="file" name="video" accept="video/*" class="form-control-file" required>
                </div>
                <div class="form-group">
                    <label>Select thumbnail</label>
                    <input type="file" name="thumbnail" accept="image/*" class="form-control-file" required>
                </div>
          
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="title" class="form-control" required>
                </div>
          
                <div class="form-group">
                    <label>Description</label>
                    <textarea  name="description" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <label>Tags</label>
                    <input type="text" name="tags" class="form-control">
                 </div>
                 <div class="form-group">
                    <label>Category</label>
                    <select name="category" class="form-control">
                       <option value="">Select category</option>
                       <option value="Semifinal-1">Semifinal 1</option>
                       <option value="Semifinal-2">Semifinal 2</option>
                       <option value="Final">Final</option>
                       <option value="Big-Five">Big Five</option>
                       <option value="Rehearsal">Rehearsal</option>
                        <option value="Vlogs">Vlogs</option>
                     
                       <option value="Song Review">Song Review</option>
                    </select>
                 </div>
          
                
                <input type="submit" class="btn btn-primary" value="Upload">

            </form>
        </div>
    </div>
</div>
<%- include ("layouts/footer") %>